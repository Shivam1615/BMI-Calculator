<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Advice_Based_on_the_BMI">

    <TextView
            android:layout_width="252dp"
            android:layout_height="140dp"
            android:id="@+id/Advice_Id" android:textStyle="bold"
            android:gravity="center_horizontal|center_vertical" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/Image_Id" app:layout_constraintTop_toBottomOf="@+id/Image_Id"
            android:layout_marginTop="80dp" app:layout_constraintEnd_toEndOf="@+id/Image_Id"
            android:background="#03A9F4" app:layout_constraintHorizontal_bias="0.493"/>
    <ImageView
            android:layout_width="400dp"
            android:layout_height="339dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/Image_Id"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" tools:ignore="VectorDrawableCompat"/>
</androidx.constraintlayout.widget.ConstraintLayout>